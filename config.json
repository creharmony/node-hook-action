{
  "server_config": {
    "host": "0.0.0.0",
    "port": 1502,
    "path": "/webhook",
    "secret": {
      "github": "githubSecretHere",
      "custom": "simpleFlatSecret"
    },
    "directories": {
      "logs": "logs"
    }
  },
  "actions": [
    {
      "events": [
        {
          "event": "custom",
          "action": "echo this is so simple use case"
        }
      ]
    },
    {
      "headers": {
        "x-github-event": "push"
      },
      "payload": {
        "$.repository.name": "node-hook-action"
      },
      "events": [
        {
          "event": "push",
          "action": "echo github node-hook-action on push"
        }
      ]
    }

  ]
}